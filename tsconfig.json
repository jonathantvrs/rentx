{
  "compilerOptions": {
    "target": "es2016",                                 
    "experimentalDecorators": true,          
    "emitDecoratorMetadata": true,                  

    "module": "commonjs",                              
    "baseUrl": "./src",
    "outDir": "./dist",                                 
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@errors/*": ["errors/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"]
    },                                     
    "resolveJsonModule": true,                      
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "skipLibCheck": true                                 
  }
}
